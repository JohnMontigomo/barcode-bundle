{
    "name": "tomasvotruba/barcode-bundle",
    "type": "symfony-bundle",
    "description": "provide barcode rendering service into your Symfony2 application.",
    "keywords": ["barcodes","barcode","qrcode","pdf417","datamatrix","ean"],
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8.0",
        "symfony/dependency-injection": "^4.0 || ^5.0 || ^6.0",
        "symfony/http-kernel": "^4.0 || ^5.0 || ^6.0"
    },
    "require-dev": {
        "symfony/framework-bundle": "^4.0 || ^5.0 || ^6.0",
        "phpunit/phpunit": "^9.6 || ^10.0",
        "symplify/easy-coding-standard": "^11.3"
    },
    "autoload": {
        "psr-4": {
            "BG\\BarcodeBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BG\\BarcodeBundle\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse --ansi",
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi"
    }
}
